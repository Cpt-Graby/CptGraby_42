#include "push_swap.h"

int	radix_sort(t_pi_f *frame)
{
	int		y;
	int		i;

	i = 0;
	while (i < SIZE_BIT)
	{
		y = -1;
		while (++y < frame->len - 1)
		{
			if (!(frame->first_elem_a->value & (1 << i)))
				push(&frame->first_elem_a, frame->first_elem_a, frame->head_b, 'b');
			else
				rotate(frame->head_a, frame->first_elem_a, 'a');
		}
		while (frame->first_elem_b)
			push(frame->head_b, frame->first_elem_b, frame->head_a, 'a');
		if (check_order_after_radix(frame->first_elem_a, frame->len))
		{
			while (frame->first_elem_a->privious->value < 0)
				rev_rotate(frame->head_a, frame->first_elem_a, 'a');
			*frame->head_a = frame->first_elem_a;
			return (0);
		}
		i++;
	}
	*frame->head_a = frame->first_elem_a;
	return (0);
}

int	check_order_after_radix(t_pi_el *head, int len)
{
	int		i;
	int		value1;
	int		value2;
	t_pi_el	*tmp;

	i = 0;
	tmp = head;
	while (++i < len - 1)
	{
		value1 = tmp->value;
		value2 = tmp->next->value;
		if (value1 > 0 && value2 > 0 && value1 > value2)
			return (0);
		else if (value1 < 0 && value2 > 0)
			return (0);
		else if (value1 <= 0 && value2 < 0 && value1 > value2)
			return (0);
		tmp = tmp->next;
	}
	return (1);
}
